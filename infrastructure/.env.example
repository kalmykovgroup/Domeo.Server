# Domeo Infrastructure Environment Configuration
# Copy this file to .env and update values for your environment

# ==================== Database ====================
POSTGRES_USER=domeo
POSTGRES_PASSWORD=<CHANGE_ME>
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==================== Redis ====================
REDIS_HOST=redis
REDIS_PORT=6379

# ==================== JWT ====================
JWT_SECRET=<CHANGE_ME_AT_LEAST_32_CHARACTERS>
JWT_ISSUER=domeo
JWT_AUDIENCE=domeo-api

# ==================== Internal API ====================
INTERNAL_API_KEY=<CHANGE_ME>

# ==================== Logging ====================
# Critical logs are published to Redis and processed by Audit.API
# Fallback logs are stored in ./logs folder when Redis is unavailable

# ==================== Service URLs (internal) ====================
AUTH_API_URL=http://auth-api:8080
CLIENTS_API_URL=http://clients-api:8080
PROJECTS_API_URL=http://projects-api:8080
MODULES_API_URL=http://modules-api:8080
MATERIALS_API_URL=http://materials-api:8080
AUDIT_API_URL=http://audit-api:8080

# ==================== External Ports ====================
API_GATEWAY_PORT=5000
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
