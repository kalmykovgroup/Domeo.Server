# Domeo Infrastructure Environment Configuration
# Copy this file to .env and update values for your environment

# ==================== Database ====================
POSTGRES_USER=domeo
POSTGRES_PASSWORD=<CHANGE_ME>
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==================== Redis ====================
REDIS_HOST=redis
REDIS_PORT=6379

# ==================== JWT ====================
JWT_SECRET=<CHANGE_ME_AT_LEAST_32_CHARACTERS>
JWT_ISSUER=domeo
JWT_AUDIENCE=domeo-api

# ==================== Internal API ====================
INTERNAL_API_KEY=<CHANGE_ME>

# ==================== Seq Logging ====================
SEQ_SERVER_URL=http://seq:80

# ==================== Service URLs (internal) ====================
AUTH_API_URL=http://auth-api:8080
USERS_API_URL=http://users-api:8080
PROJECTS_API_URL=http://projects-api:8080
CABINETS_API_URL=http://cabinets-api:8080
CATALOG_API_URL=http://catalog-api:8080

# ==================== External Ports ====================
API_GATEWAY_PORT=5000
SEQ_UI_PORT=5341
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
