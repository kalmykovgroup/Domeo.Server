{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5001"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AuthDb": "Host=localhost;Port=5432;Database=domeo_auth;Username=domeo;Password=domeo_password",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Secret": "your-super-secret-key-at-least-32-characters-long",
    "Issuer": "domeo",
    "Audience": "domeo-api",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Services": {
    "AuditApi": "http://127.0.0.1:5007"
  },
  "AuthCenter": {
    "BaseUrl": "http://localhost:5100",
    "ClientId": "domeo",
    "CallbackUrl": "http://localhost:5000/api/auth/callback"
  },
  "Frontend": {
    "BaseUrl": "http://localhost:5173",
    "PostLoginRedirect": "/",
    "PostLogoutRedirect": "/login"
  },
  "InternalApi": {
    "Key": "internal-api-key-change-in-production"
  }
}
